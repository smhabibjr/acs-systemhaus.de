<div class="border d-flex align-items-center justify-content-center vh-100">

  <div class="card p-3" style="width: 30rem" >
    <div class="card-body">
      <div class="row">
        <div class="col p-2 d-flex align-items-center justify-content-center">
          <h1>Einloggen</h1>
        </div>
      </div>

      <%= form_with url: login_path do |f| %>

        <form>

          <div class="mb-3">
            <label for="userEmail" class="form-label">Email address</label>
            <%= f.text_field :email, class:"form-control", id:"userEmail" %>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">passwort</label>
            <%= f.password_field :password, class:"form-control", id:"password" %>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
          </div>
          <div class="row">
            <div class="col d-flex align-items-center justify-content-center">
              <%= f.submit 'Anmelden', class:"btn btn-primary" %>
            </div>
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>